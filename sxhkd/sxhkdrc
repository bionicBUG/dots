# Keybinds

# Main

# Terminal (kitty)
alt + Return
	kitty

# Rofi App Launcher
alt + d
	sh $HOME/.config/rofi/bin/launcher

# Rofi Network Menu
super + n
	networkmanager_dmenu

# Rofi Menus/Applets
super + {r,m,p,a,s,i}
	sh $HOME/.config/rofi/bin/{runner,music,powermenu,asroot,screenshot,network}

alt + shift + e
	sh $HOME/.config/rofi/bin/powermenu

super + b
        rofi-bluetooth

# Dashboard (Unused)
super + d
	sh $HOME/.local/bin/dashboard

# Applications

# Launch Apps
alt + b
	firefox

alt + e
	thunar

alt + w
	brave

alt + m
	discord

alt + t
	telegram-desktop


# Lockscreen
ctrl + alt + l
        sh $HOME/.local/bin/lock

# System Keys

# Show GUI screenshot
alt + shift + s
        sh $HOME/.config/rofi/bin/screenshot

# Take a screenshot
Print
	sh $HOME/.local/bin/takeshot --now
	
# Take screenshot in 5 second
alt + Print	
	sh $HOME/.local/bin/takeshot --in5

# Take screenshot in 10 second
shift + Print	
	sh $HOME/.local/bin/takeshot --in10

# Take screenshot of active window
ctrl + Print
	sh $HOME/.local/bin/takeshot --win

# Take screenshot of area
ctrl + alt + Print
	sh $HOME/.local/bin/takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	sh $HOME/.local/bin/brightness{ up, down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	sh $HOME/.local/bin/volume{ up, down}

XF86AudioMute
	sh $HOME/.local/bin/volume mute
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Window Manager

# Close App
alt + q
	bspc node -c

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
       xkill

# Quit/Restart bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
alt + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
alt + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
alt + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + alt + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
alt + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + r + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
# Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {20 0,0 20,0 -20,-20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

# Preselect the direction
super + ctrl + alt +{Left,Right,Up,Down}
	bspc node -p {west,east,north,south}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
